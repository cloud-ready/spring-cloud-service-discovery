<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

    <bannerLeft>
        <name>${project.name}</name>
    </bannerLeft>

    <!--
    https://maven.apache.org/plugins/maven-site-plugin/examples/sitedescriptor.html
    https://maven.apache.org/skins/index.html
    http://maven.apache.org/skins/maven-fluido-skin/
    https://github.com/apache/maven-skins/blob/trunk/maven-fluido-skin/src/site/site.xml
    -->
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.7</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>true</sideBarEnabled>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
        </fluidoSkin>
    </custom>
    <body>
        <menu ref="parent"/>
        <menu name="DOCUMENTATION">
            <item href="README.html" name="README"/>
        </menu>
        <menu name="Projects">
            <item href="spring-cloud-eureka/index.html" name="spring-cloud-eureka"/>
            <item href="spring-cloud-eureka/spring-cloud-eureka-server/index.html" name="spring-cloud-eureka-server"/>
            <item href="#" name="-----"/>
            <item href="spring-cloud-consul/index.html" name="spring-cloud-consul"/>
            <item href="spring-cloud-consul/spring-cloud-consul-server/index.html" name="spring-cloud-consul-server"/>
        </menu>
        <menu ref="modules"/>
        <!--<menu ref="reports" />-->
        <menu ref="reports" inherit="bottom"/>
    </body>
</project>
